    "version": "0.2.0",
    "configurations": [
        {
            "name": "伺服器",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\Game_online.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": " ${workspaceFolder}\\Game.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "${fileBasename}"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}